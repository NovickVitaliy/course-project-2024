@using BlazorBootstrap
@using Microsoft.AspNetCore.Components.Forms
@page "/tables/additional-contacts/create"
<h3>Створити новий об'єкт додаткових контактів</h3>

<a href="/tables/additional-contacts">
    <Icon CustomIconName="fa-solid fa-arrow-right"></Icon>
    Повернутись назад
</a>
<h3>Створення об'єкт додаткових контактів</h3>

<div class="row">
    <div class="col-lg-6 col-sm-12">
        @if (CreateAdditionalContactsRequest is not null)
        {
            <EditForm FormName="createAdditionalContacts" Model="CreateAdditionalContactsRequest" OnValidSubmit="OnValidSubmit">
                <DataAnnotationsValidator></DataAnnotationsValidator>
                <div class="mb-3">
                    <label for="clientId" class="form-label">Id клієнта</label>
                    <InputNumber id="clientId" @bind-Value="CreateAdditionalContactsRequest.ClientId" class="form-control"></InputNumber>
                    <div class="validation-message">
                        <ValidationMessage For="() => CreateAdditionalContactsRequest.ClientId"></ValidationMessage>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="telegram" class="form-label">Telegram Id</label>
                    <InputText id="telegram" @bind-Value="CreateAdditionalContactsRequest.Telegram" class="form-control"></InputText>
                    <div class="validation-message">
                        <ValidationMessage For="() => CreateAdditionalContactsRequest.Telegram"></ValidationMessage>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="facebook" class="form-label">Facebook</label>
                    <InputText id="facebook" @bind-Value="CreateAdditionalContactsRequest.Facebook" class="form-control"></InputText>
                    <div class="validation-message">
                        <ValidationMessage For="() => CreateAdditionalContactsRequest.Facebook"></ValidationMessage>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="instagram" class="form-label">Instagram</label>
                    <InputText id="instagram" @bind-Value="CreateAdditionalContactsRequest.Instagram" class="form-control"></InputText>
                    <div class="validation-message">
                        <ValidationMessage For="() => CreateAdditionalContactsRequest.Instagram"></ValidationMessage>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="tiktok" class="form-label">TikTok</label>
                    <InputText id="tiktok" @bind-Value="CreateAdditionalContactsRequest.TikTok" class="form-control"></InputText>
                    <div class="validation-message">
                        <ValidationMessage For="() => CreateAdditionalContactsRequest.TikTok"></ValidationMessage>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-1">
                    <a class="btn btn-secondary" href="/tables/additional-contacts">Назад</a>
                    <button type="submit" class="btn btn-primary">Створити</button>
                </div>
            </EditForm>
        }

    </div>
</div>