@page "/tables/complaints/{id:int}/update"
@using BlazorBootstrap
@using Microsoft.AspNetCore.Components.Forms
<h3>Оновити запис скарги</h3>

<a href="/tables/complaints">
    <Icon CustomIconName="fa-solid fa-arrow-right"></Icon>
    Повернутись назад
</a>

<div class="row">
    <div class="col-lg-6 col-sm-12">
        @if (_request is not null)
        {
            <EditForm FormName="updateComplaint" Model="_request" OnValidSubmit="OnValidSubmit">
                <DataAnnotationsValidator></DataAnnotationsValidator>

                <div class="mb-3">
                    <label for="text" class="form-label">Текст Скарги</label>
                    <InputText id="text" @bind-Value="_request.Text" class="form-control"></InputText>
                    <div class="validation-message">
                        <ValidationMessage For="() => _request.Text"></ValidationMessage>
                    </div>
                </div>
                
                <div class="d-flex justify-content-end gap-1">
                    <a class="btn btn-secondary" href="/tables/client-ratings">Назад</a>
                    <button type="submit" class="btn btn-primary">Оновити</button>
                </div>
            </EditForm>
        }
    </div>
</div>